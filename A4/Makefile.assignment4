composite_pattern/Negate_Node$(OBJEXT): composite_pattern/Negate_Node.cpp
	$(COMPILE.cc) $(EXPORTFLAGS) $(OUTPUT_OPTION) composite_pattern/Negate_Node.cpp

composite_pattern/Number_Node$(OBJEXT): composite_pattern/Number_Node.cpp
	$(COMPILE.cc) $(EXPORTFLAGS) $(OUTPUT_OPTION) composite_pattern/Number_Node.cpp

composite_pattern/Addition_Node$(OBJEXT): composite_pattern/Addition_Node.cpp
	$(COMPILE.cc) $(EXPORTFLAGS) $(OUTPUT_OPTION) composite_pattern/Addition_Node.cpp

composite_pattern/Subtraction_Node$(OBJEXT): composite_pattern/Subtraction_Node.cpp
